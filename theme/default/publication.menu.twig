{% for node in categories.where('parent', '=', parent ?? NIL).sortBy('order') %}
    <li class="">
        <a href="/{{ node.address }}">{{ node.title }}</a>
        {% set subNodes = categories.where('parent', '=', node.uuid).sortBy('order') %}

        {% if subNodes.count() %}
            <ul class="sub-menu">
                {% include 'publication.menu.twig' with {'categories':categories,'parent':node.uuid,'NIL':NIL} only %}
            </ul>
        {% endif %}
    </li>
{% endfor %}
